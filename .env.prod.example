# =============================================================================
# Production Environment Configuration
# =============================================================================
# Copy this file to .env.prod and fill in all values
# Generate secrets with: openssl rand -base64 32
# =============================================================================

# =============================================================================
# GITHUB CONTAINER REGISTRY
# =============================================================================
GITHUB_REPOSITORY=your-username/licence-manager
IMAGE_TAG=latest

# =============================================================================
# PORTS (optional - defaults shown)
# =============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=8000

# =============================================================================
# URLs
# =============================================================================
# Public URL where the app is accessible (used by NextAuth)
NEXTAUTH_URL=https://licence.example.com
# API URL for frontend (public facing)
NEXT_PUBLIC_API_URL=https://licence.example.com/api
# CORS origins (comma separated, or * for all)
CORS_ORIGINS=https://licence.example.com

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
POSTGRES_USER=licence_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=licence

# =============================================================================
# CACHE - Redis
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# =============================================================================
# APPLICATION SECRETS
# =============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_ME_32_BYTE_KEY
JWT_SECRET=CHANGE_ME_JWT_SECRET
NEXTAUTH_SECRET=CHANGE_ME_NEXTAUTH_SECRET

# =============================================================================
# GOOGLE OAUTH (REQUIRED)
# =============================================================================
# Set up at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://licence.example.com/api/v1/auth/google/callback

# =============================================================================
# SUPERADMIN
# =============================================================================
# Email address of the superadmin - auto-created on first login
SUPERADMIN_EMAIL=admin@example.com
